const idleText = 'nothing hovered';

export default class Script%SCRIPT_INDEX% {
  constructor() {
    this.text = idleText;
  }

  onClick(object) {
    object.parentNode.removeChild(object);
  }

  onHover(object) {
    const friendlyName = `${object.tagName.toLowerCase()}`;
    this.text = `remove ${friendlyName}`;
  }

  onHoverEnd() {
    this.text = idleText;
  }
}
